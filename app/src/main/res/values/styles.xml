<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:screenOrientation">portrait</item>
<!--        <item name="android:windowIsTranslucent">true</item>-->

    </style>
    <style name="Theme_AudioDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--Dialog的windowFrame框为无-->
        <item name="android:windowFrame">@null</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--//是否半透明-->
        <item name="android:windowIsTranslucent">true</item>
        <!--/背景是否模糊显示-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <!--实下滑线样式-->
    <style name="Line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/line</item>
    </style>

    <style name="text_white">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="text_black">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black_dft</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="horizontal_divider">
        <item name="android:layout_height">0.8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/dividing_dark</item>
    </style>

    <style name="horizontal_divider_light">
        <item name="android:layout_height">0.8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/dividing_light</item>
    </style>

    <style name="vertical_divider">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0.8dp</item>
        <item name="android:background">@color/dividing_dark</item>
    </style>

    <style name="vertical_divider_light">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0.8dp</item>
        <item name="android:background">@color/dividing_light</item>
    </style>
    <!-- dialog动画 -->
    <style name="style_dialog">
        <item name="android:windowEnterAnimation">@anim/anim_popup_zoom_enter</item>
        <item name="android:windowExitAnimation">@anim/anim_popup_zoom_exit</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">

    </style>

    <style name="PraiseOrCommentAnimationStyle">
        <item name="android:windowEnterAnimation">@anim/anim_praise_or_comment_in</item>
        <item name="android:windowExitAnimation">@anim/anim_praise_or_comment_out</item>
    </style>

    <!--选项条目样式-->
    <style name="OptionItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">102px</item>
        <item name="android:background">@color/white</item>
    </style>
</resources>
