<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <RelativeLayout
            android:id="@+id/rlAlbum"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/ivAlbum"
                android:layout_width="120px"
                android:layout_height="120px"
                android:layout_centerInParent="true"
                android:background="@drawable/selector_session_func"
                android:src="@mipmap/ic_func_pic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivAlbum"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15px"
                android:text="@string/album"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlTakePhoto"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/ivShot"
                android:layout_width="120px"
                android:layout_height="120px"
                android:layout_centerInParent="true"
                android:background="@drawable/selector_session_func"
                android:src="@mipmap/ic_func_shot" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivShot"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15px"
                android:text="@string/shot"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout

            android:id="@+id/rlLocation"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/ivLocation"
                android:layout_width="120px"
                android:layout_height="120px"
                android:layout_centerInParent="true"
                android:background="@drawable/selector_session_func"
                android:src="@mipmap/ic_func_location"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivLocation"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15px"
                android:text="@string/location"
                android:textSize="12sp"/>
        </RelativeLayout>

        <RelativeLayout

            android:id="@+id/rlRedPacket"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/ivVideo"
                android:layout_width="120px"
                android:layout_height="120px"
                android:layout_centerInParent="true"
                android:background="@drawable/selector_session_func"
                android:src="@mipmap/ic_func_video"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivVideo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15px"
                android:text="@string/live_video"
                android:textSize="12sp"/>
        </RelativeLayout>
        <RelativeLayout

            android:id="@+id/ivTest"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_test"
                android:layout_width="120px"
                android:layout_height="120px"
                android:layout_centerInParent="true"
                android:background="@drawable/selector_session_func"
                android:src="@mipmap/ic_func_video"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_test"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15px"
                android:text="拉流测试"
                android:textSize="12sp"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </LinearLayout>

</LinearLayout>